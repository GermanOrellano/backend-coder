<main class="flex-grow-1 d-flex w-100 flex-wrap justify-content-evenly">
    <section class="w-50 mb-4 d-flex flex-column justify-content-start align-items-center" style="min-width: 380px;">
        <form class="w-50 m-auto">
            <h2>New User</h2>
            <fieldset class="mb-3 text-center">
                <label for="name" class="form-label mb-0">Name</label>
                <input type="text" class="form-control" id="register-name" />
            </fieldset>
            <fieldset class="mb-3 text-center">
                <label for="lastname" class="form-label mb-0">Last Name</label>
                <input type="text" class="form-control" id="register-lastname" />
            </fieldset>
            <fieldset class="mb-3 text-center">
                <label for="photo" class="form-label mb-0">URL Photo</label>
                <input type="text" class="form-control" id="register-photo" />
            </fieldset>
            <fieldset class="mb-3 text-center">
                <label for="email" class="form-label mb-0">Email</label>
                <input type="email" class="form-control" id="register-email" />
            </fieldset>
            <fieldset class="mb-3 text-center">
                <label for="password" class="form-label mb-0">Password</label>
                <input type="password" class="form-control" id="register-password" />
            </fieldset>
            <button id="register" type="button" class="w-100 btn btn-primary mt-3">Register</button>
        </form>
    </section>
</main>
<script src="/scripts/register.js"></script>